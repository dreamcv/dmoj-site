.wmd-wrapper(id='{{ id|safe }}-wmd-wrapper')
    .wmd-panel
        div(id='{{ id|safe }}_wmd_button_bar')
        <textarea{{ attrs|safe }}>{{ body }}</textarea>
    if show_preview
        .wmd-panel.wmd-preview.dmmd-preview(id='{{ id|safe }}-preview',
                 data-preview-url=preview_url, data-textarea-id=id,
                 data-timeout=preview_timeout, class=extra_classes)
            .dmmd-preview-update #[i.fa.fa-refresh] Update Preview
            .dmmd-preview-content.content-description
