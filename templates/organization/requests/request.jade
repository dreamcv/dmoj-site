extends base
- load i18n

block js_media
    script(type='text/javascript').
        $(function () {
            $('#id_reason').keydown(function (e) {
                if (e.ctrlKey && (e.keyCode === 13 || e.keyCode === 10)) {
                    $(this).closest('form').submit();
                }
            });
        });

block body
    form.form-area(action='', method='post')
        - csrf_token
        p
            label(for='{{ form.reason.id_for_label }}')
                b {% trans "Your reason for joining:" %}
        p #{form.reason}
        button(type='submit') {% trans "Request" %}
